{
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "editor.fontSize": 22,
  "editor.lineNumbers": "off",
  "editor.snippetSuggestions": "none",
  "editor.minimap.enabled": false,
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": true,
  "zenMode.hideActivityBar": true,
  "zenMode.hideStatusBar": true,
  "zenMode.showTabs": "none",
  "window.title": "${activeEditorShort}${separator}nuqs${separator}Next.js Conf 2025",
  // Biome configuration
  "biome.lsp.bin": "./node_modules/.bin/biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.organizeImports.biome": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "workbench.colorCustomizations": {
    "[One Monokai]": {
      "editorGroup.emptyBackground": "#101113",
      "editor.background": "#000000",
      "editor.lineHighlightBackground": "#373d4872",
      "activityBar.activeBackground": "#40444e",
      "activityBar.activeBorder": "#828dac",
      "activityBar.background": "#101113",
      "titleBar.inactiveBackground": "#101113",
      "titleBar.activeBackground": "#101113",
      "statusBar.background": "#101113",
      "editorGroupHeader.tabsBackground": "#101113",
      "tab.activeBackground": "#212329",
      "tab.inactiveBackground": "#17191d",
      "sideBar.background": "#101113",
      "sideBar.border": "#373d4872",
      "sideBarSectionHeader.background": "#212329",
      "list.hoverBackground": "#373d4872",
      "list.activeSelectionBackground": "#373d4872",
      "list.inactiveSelectionBackground": "#373d4872",
      "quickInput.background": "#101113",
      "editorInlayHint.foreground": "#344c76",
      "editorInlayHint.background": "#0000",
      "editorInlayHint.typeForeground": "#597185",
      "editorInlayHint.parameterForeground": "#7d7567",
      "terminal.background": "#101113",
      "terminal.selectionBackground": "#373d4872",
      "panel.background": "#101113",
      "panel.border": "#373d4872"
    }
  }
}
